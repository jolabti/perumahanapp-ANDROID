<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context=".ShowDataActivity">

    <TextView

        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ringkasan"
        android:textColor="@color/green"
        android:textSize="40sp"
        android:id="@+id/ringkasanView"

        />


    <TextView

        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Pemilik"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:textSize="12sp"
        android:id="@+id/idView"

        />


    <TextView

        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Pemilik"
        android:textColor="@color/blue"
        android:layout_marginTop="80dp"
        android:textSize="12sp"
        android:id="@+id/aidView"
        android:layout_alignParentRight="true"
        android:fontFamily="monospace"

        />


    <TextView

        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pemilik"
        android:layout_below="@+id/idView"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/namapemilikView"

        />


    <TextView

        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pemilik"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/aidView"
        android:textSize="12sp"
        android:id="@+id/anamapemilikView"
        android:layout_alignParentRight="true"
        android:fontFamily="monospace"

        />


    <TextView

        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipe Rumah"
        android:textColor="@color/white"
        android:layout_below="@+id/namapemilikView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/tiperumahView"

        />


    <TextView

        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipe Rumah"
        android:textColor="@color/blue"
        android:layout_below="@+id/namapemilikView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/atiperumahView"
        android:layout_alignParentRight="true"

        />


    <TextView

        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga Rumah"
        android:textColor="@color/white"
        android:layout_below="@+id/tiperumahView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/hargarumahView"

        />


    <TextView

        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga Rumah"
        android:textColor="@color/blue"
        android:layout_below="@+id/tiperumahView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/ahargarumahView"
        android:layout_alignParentRight="true"

        />


    <TextView

        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DP Awal"
        android:textColor="@color/white"
        android:layout_below="@+id/hargarumahView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/dpView"

        />

    <TextView

        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DP"
        android:textColor="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hargarumahView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/adpView"

        />


    <TextView

        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cicilan Perbulan"
        android:textColor="@color/white"
        android:layout_below="@+id/dpView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/cicilanperbulanView"

        />


    <TextView

        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cicilan Perbulan"
        android:textColor="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dpView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/acicilanperbulanView"

        />


    <TextView

        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cicilan Terbayar"
        android:textColor="@color/white"
        android:layout_below="@+id/cicilanperbulanView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/cicilanlunasView"

        />


    <TextView

        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cicilan Lunas"
        android:textColor="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cicilanperbulanView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/acicilanlunasView"

        />


    <TextView

        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tunggakan"
        android:textColor="@color/white"
        android:layout_below="@+id/cicilanlunasView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/tunggakanView"

        />

    <TextView

        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tunggakan"
        android:textColor="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cicilanlunasView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/atunggakanView"

        />


    <TextView

        android:layout_marginLeft="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sisa Cicilan"
        android:textColor="@color/white"
        android:layout_below="@+id/tunggakanView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/sisacicilanView"

        />


    <TextView

        android:layout_marginRight="10dp"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sisa Cicilan"
        android:textColor="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tunggakanView"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:id="@+id/asisacicilanView"

        />


    <Button

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/detailbayarButton"
        android:layout_below="@+id/sisacicilanView"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:text="Detail Pembayaran"
        android:background="@color/colorAccent"
        android:textColor="@color/white"

        />



</RelativeLayout>
